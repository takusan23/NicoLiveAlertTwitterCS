<Page
    x:Class="NicoLiveAlertTwitterCS.HomePanel"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:NicoLiveAlertTwitterCS"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <StackPanel Orientation="Vertical" Margin="10">
            <TextBlock Text="ニコ生アラート状態：接続していません。" FontSize="25"  Padding="10,20,10,10"/>
            <ToggleSwitch Tag="home_twitter_stream_switch" Header="接続することでリアルタイムで番組開始ツイートを監視します。" FontSize="20" Margin="10" OnContent="接続" OffContent="未接続" Toggled="ToggleSwitch_Toggled"/>

            <TextBlock Text="予約枠自動入場" FontSize="25" Padding="10,20,10,10" />
            <ToggleSwitch Tag="home_auto_admission_switch" Header="自動で予約枠を探し、開場時間になったら開きます。" FontSize="20" Margin="10" OnContent="利用する" OffContent="利用しない"/>
        </StackPanel>
    </Grid>
</Page>
